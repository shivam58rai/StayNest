<% layout("/layouts/boilerplate")%><%= success %>
<body>
    <h1>all listing</h1>
    

<div class="row row-cols-lg-4 row-cols-md-3 row-cols-sm-2 row-cols-1 g-4">
  <% for (let listing of allListings) { %>
    <div class="col">
      <a href="/listings/<%= listing._id %>" class="text-decoration-none text-dark" style="display: block;">
        <div class="card listing-card h-100">
          <img 
            src="<%= listing.image.url %>"
            class="card-img-top"
            alt="listing_image"
            style="height: 20rem; object-fit: cover;"
          />
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <h5 class="card-title"><%= listing.title %></h5>
            <p class="card-text">â‚¹<%= listing.price.toLocaleString("en-IN") %>/night</p>
          </div>
        </div>
      </a>
    </div>
  <% } %>
</div>

 
</body>

